<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="334dp"
    android:layout_height="226dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <!-- 用户名输入框 -->
    <AutoCompleteTextView
        android:id="@+id/findpwd_username"
        android:textSize="16sp"
        android:textColor="#636363"
        android:background="@drawable/box_highlight"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:hint="@string/hint_username"
        android:maxLength="@integer/length_username"
        android:maxLines="1"
        android:completionThreshold="1"
        android:textCursorDrawable="@drawable/color_cursor"
        android:imeOptions="actionDone" />

    <!-- 找回密码 -->
    <Button
        android:id="@+id/findpwd_button"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:background="@drawable/button_selector"
        android:text="@string/btn_findpwd_text" />


    <ImageView
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@color/gray"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:text="@string/textview_kefu"></TextView>
</LinearLayout>
